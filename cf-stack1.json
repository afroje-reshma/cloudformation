{
"AWSTemplateFormatVersion": "2010-09-09",
"Description": "create an ec2 instance, uses vanilla Amazon Linux AMI",
"Parameters": {
    "KeyPair": { 
        "Description": "The ec2 keypair to allow ssh access to the instance",
        "Type": "String"
     }
},
"Resources": {
    "EC2Instance": {
        "Properties": {
            "ImageId": "ami-5ec1673e",
            "InstanceType": "t2.micro",
            "KeyName": {
                "Ref": "KeyPair"
             }
         },

         "Type": "AWS::EC2::Instance"
        }
},
"Outputs": {
    "InstanceId": {
        "Description": "The InstanceId of the newly created EC2 instance",
        "Value": { "Fn::GetAtt" : [ "Server" , "PublicIp" ] }
            
      }
   },
}
